# Docker image for running examples in Tensorflow models.
# base_image depends on whether we are running on GPUs or non-GPUs
FROM tensorflow/tensorflow:latest

RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates \
    build-essential \
    git

RUN mkdir -p /opt/tf-models
#TODO(karmel): make the data dir configurable
RUN mkdir -p /opt/tf-test-data

RUN git clone https://github.com/tensorflow/models.git /opt/tf-models

WORKDIR /opt/tf-models
# TODO(karmel): Remove this when testing is not on a branch
RUN git checkout feature/kubeflow-testing

ENV PYTHONPATH $PYTHONPATH:/opt/tf-models/official/resnet
RUN python official/resnet/cifar10_download_and_extract.py --data_dir=/opt/tf-test-data
RUN python official/resnet/cifar10_main.py --data_dir=/opt/tf-test-data

# TODO(karmel): Working around benchmarking script. Also, 
# ENTRYPOINT shouldn't be shell style if possible
COPY hello_tensorflow.py /opt/hello_tensorflow.py
ENTRYPOINT python /opt/hello_tensorflow.py --data_dir=/opt/tf-test-data

#TODO(karmel): make the data dir configurable
#CMD ["python", "models/official/resnet/cifar10_download_and_extract.py", "--data_dir=/opt/tf-test-data"]
#CMD ["python", "models/official/resnet/cifar10_test.py"]
